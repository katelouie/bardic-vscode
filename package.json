{
  "name": "bardic",
  "displayName": "Bardic",
  "description": "Syntax highlighting for Bardic interactive fiction files",
  "version": "0.2.0",
  "publisher": "katelouie",
  "repository": {
    "type": "git",
    "url": "https://github.com/katelouie/bardic-vscode"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "icon": "quill-pen.png",
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "keywords": [
    "bardic",
    "interactive fiction",
    "syntax highlighting"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bard",
        "aliases": [
          "Bard",
          "bardic"
        ],
        "extensions": [
          ".bard"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bard",
        "scopeName": "source.bard",
        "path": "./syntaxes/bard.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "bard",
        "path": "./snippets/bard.json"
      }
    ],
    "configurationDefaults": {
      "[bard]": {
        "editor.wordWrap": "on"
      }
    }
  }
}