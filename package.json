{
  "name": "bardic",
  "displayName": "Bardic",
  "description": "Syntax highlighting for Bardic interactive fiction files",
  "version": "0.5.0",
  "publisher": "katelouie",
  "repository": {
    "type": "git",
    "url": "https://github.com/katelouie/bardic-vscode"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "icon": "quill-pen.png",
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "keywords": [
    "bardic",
    "interactive fiction",
    "syntax highlighting"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:bard"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "dependencies": {
    "@vscode/python-extension": "^1.0.5"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "bardic.showGraph",
        "title": "Bardic: Show Story Graph",
        "icon": "$(graph)"
      },
      {
        "command": "bardic.previewPassage",
        "title": "Bardic: Preview Passage",
        "icon": "$(eye)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == bard",
          "command": "bardic.showGraph",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == bard",
          "command": "bardic.previewPassage",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == bard",
          "command": "bardic.previewPassage",
          "group": "bardic"
        }
      ]
    },
    "languages": [
      {
        "id": "bard",
        "aliases": [
          "Bard",
          "bardic"
        ],
        "extensions": [
          ".bard"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bard",
        "scopeName": "source.bard",
        "path": "./syntaxes/bard.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "bard",
        "path": "./snippets/bard.json"
      }
    ],
    "configurationDefaults": {
      "[bard]": {
        "editor.wordWrap": "on"
      }
    },
    "configuration": {
      "title": "Bardic",
      "properties": {
        "bardic.compilationTimeout": {
          "type": "number",
          "default": 10000,
          "description": "Timeout for CLI compilation in milliseconds (max 60000)"
        },
        "bardic.preferCLI": {
          "type": "boolean",
          "default": true,
          "description": "Prefer CLI compilation over simple parser when available"
        }
      }
    }
  }
}