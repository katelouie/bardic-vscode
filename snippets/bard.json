{
  "Simple If Block": {
    "prefix": "if",
    "body": [
      "@if ${1:condition}:",
      "\t${2:content}",
      "@endif"
    ],
    "description": "Simple @if block"
  },
  "If-Else Block": {
    "prefix": "ifel",
    "body": [
      "@if ${1:condition}:",
      "\t${2:content}",
      "@else:",
      "\t${3:content2}",
      "@endif"
    ],
    "description": "If-else block (no elif)"
  },
  "Full If Block": {
    "prefix": "iff",
    "body": [
      "@if ${1:condition}:",
      "\t${2:content}",
      "@elif ${3:condition2}:",
      "\t${4:content2}",
      "@else:",
      "\t${5:content3}",
      "@endif"
    ],
    "description": "Full @if/@elif/@else block"
  },
  "For Loop": {
    "prefix": "for",
    "body": [
      "@for ${1:item} in ${2:items}:",
      "\t${3:content}",
      "@endfor"
    ],
    "description": "For loop block"
  },
  "Choice": {
    "prefix": "choice",
    "body": [
      "+ [${1:text}] -> ${2:target}"
    ],
    "description": "Regular choice"
  },
  "Conditional Choice": {
    "prefix": "cchoice",
    "body": [
      "+ {${1:condition}} [${2:text}] -> ${3:target}"
    ],
    "description": "Conditional choice"
  },
  "Start Directive": {
    "prefix": "start",
    "body": [
      "@start ${1:PassageName}"
    ],
    "description": "Set story start passage"
  },
  "Metadata Block": {
    "prefix": "metadata",
    "body": [
      "@metadata",
      "\ttitle: ${1:Story Title}",
      "\tauthor: ${2:Author Name}",
      "\tversion: ${3:1.0.0}",
      "\tstory_id: ${4:story_id}",
      "\tdescription: ${5:Description}",
      "$0"
    ],
    "description": "Metadata block"
  },
  "Passage Header": {
    "prefix": "passage",
    "body": [
      ":: ${1:PassageName}",
      "$0"
    ],
    "description": "Passage header"
  },
  "Section Divider": {
    "prefix": "br",
    "body": [
      "# -------------------------------------------------------------------------------",
      "# ${1:Section Name}",
      "# -------------------------------------------------------------------------------",
      "$0"
    ],
    "description": "Section divider comment with dashes"
  },
  "Major Section Divider": {
    "prefix": "bigbr",
    "body": [
      "# ===============================================================================",
      "# ${1:Major Section Name}",
      "# ===============================================================================",
      "$0"
    ],
    "description": "Major section divider comment with equals signs"
  }
}
